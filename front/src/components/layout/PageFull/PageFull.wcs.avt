@import '@functions';

:host {
	display: flex;
	height: 100%;
	justify-content: center;
	width: 100%;

	.content {
		display: flex;
		flex-direction: column;
		height: 100%;
		justify-content: space-between;
		max-width: 1200px;
		padding: 32px;
		padding-bottom: 16px;
		width: 100%;
	}
}

@include mobile {
	:host {
		.content {
			padding: 16px;
		}
	}
}