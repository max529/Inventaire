@import '@functions';

:host {
	height: 100%;
	width: 100%;

	.page-scroll {
		height: 100%;
		width: 100%;
	}

	.content {
		display: flex;
		flex-direction: column;
		height: 100%;
		justify-content: space-between;
		margin: auto;
		max-width: 1200px;
		padding: 32px;
		padding-bottom: 16px;
		width: 100%;
	}
}


@include mobile {
	:host {
		.content {
			padding: 16px;
		}
	}
}