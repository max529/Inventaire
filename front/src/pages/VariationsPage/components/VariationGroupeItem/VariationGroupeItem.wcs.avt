:host {
	align-items: center;
	border-top: 1px solid var(--color-base-300);
	display: flex;
	height: 50px;
	padding: 0 16px;

	.name {
		flex-grow: 1;
		min-width: 0;
		overflow: hidden;
		text-overflow: ellipsis;
		white-space: nowrap;
	}

	.actions {
		display: flex;
		flex-shrink: 0;
		gap: 5px;

	}
}


:host(:first-child) {
	border-top: none;
}

:host(:not([visible])) {
	display: none;
}
