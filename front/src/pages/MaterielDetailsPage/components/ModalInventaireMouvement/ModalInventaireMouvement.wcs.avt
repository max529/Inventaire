:host {
	.title {
		font-size: var(--font-size-md);
		margin-bottom: 16px;
	}

	.form {
		display: flex;
		flex-direction: column;
		gap: 12px;

		.btn {
			align-items: center;
			display: flex;
			justify-content: center;
		}
	}

	.footer {
		display: flex;
		gap: 0.5rem;
		justify-content: flex-end;
		margin-top: 2rem;
	}
}
